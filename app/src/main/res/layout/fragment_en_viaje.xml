<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:contentPadding="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="210dp"
        android:layout_height="406dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/card_viaje_backround" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="150dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/card_viaje_backround" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="80dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/card_viaje_backround" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/startviaje_left"
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/left_w" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startviaje_origen"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Carabayllo"
                        android:textColor="#FFFF" />

                    <TextView
                        android:id="@+id/startviaje_horaorigen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 am"
                        android:textColor="#FFFF" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/miviaje_divider"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/divider_w" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startviaje_destino"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="UPC San Miguel"
                        android:textColor="#FFFF" />

                    <TextView
                        android:id="@+id/startviaje_horadestino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:00 am"
                        android:textColor="#FFFF" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/divder_pasajeros"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:src="@drawable/divider_pasajeros" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pasajeros_a_recoger"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="0dp" />


        <Button
            android:id="@+id/endviaje_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/end_trip_viaje"
            android:text="Finalizar viaje"
            android:textAllCaps="false"
            android:textColor="#FFFF" />

    </LinearLayout>


</androidx.cardview.widget.CardView>