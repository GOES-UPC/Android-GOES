<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/resena_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/skip_logo"
                        app2:civ_border_width="0dp" />

                    <LinearLayout
                        android:id="@+id/micontainer_resena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/resena_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mitch Tabian"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/resena_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The Title of a Blog"
                            android:textColor="#000"
                            android:textSize="10sp" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/resena_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Buen Viaje"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/resena_valoracion_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valoracion"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/resena_valoracion"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>