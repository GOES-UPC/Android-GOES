<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:backgroundTint="#00FFFFFF"
    app:cardBackgroundColor="#FFFF"
    app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="10dp"
        android:text="AÃ±ade un mensaje"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"></TextView>


    <EditText
        android:id="@+id/et_solicitar_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:hint="Escribe un mensaje"

        android:inputType="textNoSuggestions"
        android:maxHeight="60dip"
        android:minHeight="30dip"
        android:minLines="1"></EditText>


    <ImageView
        android:id="@+id/iv_dialog_map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="20dp"></ImageView>

    <Button
        android:id="@+id/btn_dialog_solicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="110dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/mybutton"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:text="Enviar Solicitud"
        android:textColor="#FFFF"></Button>

</androidx.cardview.widget.CardView>