<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="right"
            android:orientation="horizontal"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:id="@+id/micontainer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/miviaje_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mitch Tabian"
                    android:textColor="#454F63"
                    android:textAlignment="textEnd"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/miviaje_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Title of a Blog"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="10sp" />


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/miviaje_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:src="@drawable/skip_logo"
                app2:civ_border_width="0dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:orientation="vertical"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/miviaje_left"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/left" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/miviaje_origen"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textColor="#454F63"
                            android:text="Carabayllo" />

                        <TextView
                            android:id="@+id/miviaje_horaorigen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#454F63"
                            android:text="09:00 am" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/miviaje_divider"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/miviaje_destino"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textColor="#454F63"
                            android:text="UPC San Miguel" />

                        <TextView
                            android:id="@+id/miviaje_horadestino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#454F63"
                            android:text="11:00 am" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/miviaje_commentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app2:srcCompat="@drawable/ic_comment" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>