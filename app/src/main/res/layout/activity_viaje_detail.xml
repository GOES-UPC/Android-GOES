<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background_blue"
    android:layout_height="match_parent"
    tools:context=".activities.ViajeDetail">


    <ImageButton
        android:id="@+id/detback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="360dp"
        android:layout_marginBottom="695dp"
        android:layout_marginLeft="20dp"
        android:background="#00FFFFFF"
        app2:srcCompat="@drawable/ic_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="546dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detback_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginBottom="130dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/valoracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valoracion"
                    android:textAlignment="center"
                    android:textColor="#454F63"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/viajedetail_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:textAlignment="center"
                    android:textColor="#454F63"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="412dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/viajedetail_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        app2:civ_border_color="#FF000000"
                        app2:civ_border_width="0dp" />

                    <LinearLayout
                        android:id="@+id/detailcontainer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/viajedetail_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mitch Tabian"
                            android:textColor="#454F63"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/viajedetail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Title of a Blog"
                            android:textColor="#7C8088"
                            android:textSize="10sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/viajedetail_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Nuevo Viaje"
                        android:textColor="#78849E" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/leftimagedetail"
                            android:layout_width="56dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/left" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="30dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/viajedetail_origen"
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:text="Carabayllo"
                                    android:textColor="#454F63" />

                                <TextView
                                    android:id="@+id/viajedetail_hora_origen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="09:00 am"
                                    android:textColor="#454F63" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageViewdetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/divider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/viajedetail_destino"
                                    android:layout_width="134dp"
                                    android:layout_height="wrap_content"
                                    android:text="UPC San Miguel"
                                    android:textColor="#454F63" />

                                <TextView
                                    android:id="@+id/viajedetail_hora_destino"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="11:00 am"
                                    android:textColor="#454F63" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TextView
                    android:id="@+id/contador_resenas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="12"
                    android:textColor="#78849E" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/comment" />

                <TextView
                    android:id="@+id/contador_solis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:text="4"
                    android:textColor="#78849E" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/solis" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <!--<fragment
        android:id="@+id/mapViajeDetail"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_solicitar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />-->
    <Button
        android:id="@+id/btn_solicitar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:width="160dp"
        android:background="@drawable/login_button"
        android:text="Solicitar"
        android:textAllCaps="false"
        android:textColor="#FFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageView
        android:id="@+id/iv_staticmap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_solicitar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/recycler_resenas_view"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>